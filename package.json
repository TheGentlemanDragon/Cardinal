{
  "name": "cardinal",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "https://github.com/TheNando/cardinal",
  "author": "Nando Pena <fernando.pena@rackspace.com>",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender",
    "serve": "preact build && sirv build --cors --single",
    "dev": "preact watch --host cardinal.localhost",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@jaames/iro": "^4.5.1",
    "firebase-auth-lite": "^0.8.5",
    "firebase-firestore-lite": "^1.0.0-RC1.2",
    "idb-keyval": "^3.2.0",
    "linaria": "^1.3.3",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.18",
    "preact-render-spy": "^1.2.1",
    "prettier": "^1.18.2",
    "proptypes": "^1.1.0",
    "sirv-cli": "^0.4.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
