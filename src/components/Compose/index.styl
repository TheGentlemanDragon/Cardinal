.compose-tab
  color #ffffff

.compose-title
  height 44px
  padding 0 20px

  > *
    align-content center

  label
    text-transform uppercase

  i
    margin-left 15px

.compose-item
  background-color #204070
  color darken(#ffffff, 20%)

.property
  border-bottom 1px #04264e solid
  height 36px

  button
    margin-left 20px

  span
    line-height 12px
    padding-left 20px

  input, select
    background-color rgba(255,255,255,0.9)
    border-bottom solid 2px #0f4682
    border-style none
    font-family "Open Sans"
    font-size 1rem
    height 100%
    line-height 20px
    padding 0 10px
    width 60%

  input[type="checkbox"]
    margin 0
    padding 0
    width 0

    &:before
      background-color rgba(#ffffff, 20%)
      border-left 36px solid darken(#ffffff, 20%)
      content ''
      cursor pointer
      height 36px
      margin-left -72px
      position absolute
      width 72px

    &[value=true]:before
      background-color rgba(#daa520, 20%)
      border-left none
      border-right 36px solid #daa520

  input[type="number"]
    text-align right
    width 30%

  input[type="range"]
    margin-right 10px

.compose-element
  background-color #204070
  color darken(#ffffff, 20%)
  cursor pointer
  height 42px
  padding 0

  i
    width 28px

    &.element-type
      font-size 2rem
      background-color rgba(0, 0, 0, 0.3)
      height inherit
      margin-right 15px
      width 42px
      line-height 2.7rem
      text-align center

    &.icon-text.element-type
      font-size 1.4rem

    &.icon-text.element-type:after
      content ''
      position absolute
      width 1.75rem
      height 1.75rem
      border 3px solid darken(#ffffff, 20%)
      border-radius 0.2rem
      margin-top 0.45rem
      margin-left -1.6rem

    &.icon-text.element-type.dynamic:after
      border-style dashed
      border-width 4px

    &.action
      display none

  &:hover i.action
    display inline-block

  input
    background-color rgba(255, 255, 255, 0.8)
    border-bottom solid 2px rgb(15, 70, 130)
    border-radius 3px
    border-style none
    font-size 1rem
    font-family "Open Sans"
    line-height 20px
    margin 1px 10px 0 -6px
    padding 2px 6px
    transition background-color 1s

  &.selected
    background-color #daa520
    color rgb(34, 34, 34)
    font-weight 600

    i.icon-text.element-type:after
      border 3px solid rgb(34, 34, 34)

    i.icon-text.element-type.dynamic:after
      border-style dashed
      border-width 4px
