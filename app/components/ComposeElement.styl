.compose-element
  cursor pointer
  height 42px
  padding 0

  i
    width 28px

    &.element-type
      background-color rgba(0, 0, 0, 0.3)
      height inherit
      width 42px
      margin-right 15px

  input
    background-color rgba(255, 255, 255, 0.8)
    border-bottom solid 2px rgb(15, 70, 130)
    border-radius 3px
    border-style none
    font-size 1rem
    font-family "Open Sans"
    line-height 20px
    margin 1px 10px 0 -6px
    padding 2px 6px
    // width 175px
    transition background-color 1s

  &.selected
    background-color #daa520
    color rgb(34, 34, 34)
    font-weight 600

