.compose-tab
  color #ffffff

.compose-title
  height 56px
  padding 0 20px

  > *
    align-content center

  label
    text-transform uppercase

.properties-item
  border-bottom 1px #04264e solid
  height 36px

  span
    line-height 12px
    padding-left 20px
    width 40%

  input
    background-color rgba(255,255,255,0.8)
    border-bottom solid 2px #0f4682
    border-style none
    font-family "Open Sans"
    font-size 1rem
    height 100%
    line-height 20px
    padding 2px 6px
    width 60%


