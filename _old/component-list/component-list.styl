component-list
  margin 40px 100px
  min-width 305px

  .title
    color #eeeeee
    font-family 'Sans'
    font-size 25px
    margin-bottom 15px
    text-shadow 0 0 6px rgba(0, 0, 0, 0.6)

  .list
    flex-wrap wrap
    overflow-y scroll

  &[context="games"] .list
    height 100%
    margin 0 -30px
    padding 5px 25px 50px

    .games
      background-color #ffffff
      box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.3),
                 0 1px 1px 0 rgba(0, 0, 0, 0.24),
                 0 2px 1px -1px rgba(0, 0, 0, 0.22)
      border-radius 3px
      cursor pointer
      font-family 'Sans'
      font-size 20px
      flex 0 0 215px
      height 120px
      margin 8px
      transition box-shadow 0.2s, transform 0.2s

      &:hover
        box-shadow 0 6px 6px -3px rgba(0, 0, 0, 0.3),
                   0 10px 14px 1px rgba(0, 0, 0, 0.24),
                   0 4px 18px 3px rgba(0, 0, 0, 0.22)
        transform scale(1.15, 1.15)

    .templates
      background-color rgba(255, 255, 255, 0.4)
      box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.3),
                 0 1px 1px 0 rgba(0, 0, 0, 0.24),
                 0 2px 1px -1px rgba(0, 0, 0, 0.22)
      border 3px dashed rgba(0, 0, 0, 0.5)
      border-radius 10px
      box-sizing border-box
      cursor pointer
      font-family 'Sans'
      font-size 20px
      flex 0 0 calc(220px * 0.71429)
      height 220px
      margin 8px
      padding 15px
      text-align center
      transition box-shadow 0.2s, transform 0.2s

      &:hover
        box-shadow 0 6px 6px -3px rgba(0, 0, 0, 0.3),
                   0 10px 14px 1px rgba(0, 0, 0, 0.24),
                   0 4px 18px 3px rgba(0, 0, 0, 0.22)
        transform scale(1.1, 1.1)

    .spacer
      background-color rgba(0, 0, 0, 0)
      flex 0 0 55px
      height 120px
