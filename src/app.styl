md-icon.md-36
    font-size 36px
    width 36px
    height 36px

/* Base color variables */

primary = #2196f3
accent = #ff5252
background = #ececec
text-dark = #333333
text-light = #ffffff

html, body
  font-family 'Open Sans'
  overflow hidden

.page-width
  width 1160px
  margin 0 auto

.title
  margin-top 35px

.tile
  background-color background
  &:hover
    background-color darken(background, 15%)
  figure
    align-items flex-start
    justify-content flex-end
  .md-button.md-icon-button
    margin 8px 8px 0
    height 44px
    width 44px

.float-container
  position absolute

  .fab-button-floating
    left 1090px
    top -50px

.nav-section-title, .nav-section
  padding 10px

.nav-section-title
  color text-light
  cursor pointer
  background-color darken(background, 40%)
  font-weight bold
  font-size large

.nav-section
  background-color background

  md-input-container
    margin-bottom -6px

/* Override styles */

md-grid-list + md-grid-list
  margin-top 20px

md-grid-tile
  cursor hand
  transition background-color 0.1s ease-in-out
  &:hover
    transition background-color 0.2s ease-in-out

.md-title
  margin 15px 0
