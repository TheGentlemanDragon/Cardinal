.sidebar
  background-color rgba(#000000, 50%)
  font-family 'Open Sans'
  max-width 272px
  min-width 272px
  position static
  width 272px

.sidebar-title
  border-bottom 1px solid rgba(#ffffff, 20%)
  color #ffffff
  font-size 40px
  text-decoration none
  line-height 42px
  padding 20px 0
  text-align center

