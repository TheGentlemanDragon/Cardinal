modal
    position absolute
    height calc(3.5px * 150)
    width calc(2.5px * 150)
    left 50%
    top 50%
    transform translate(-50%, -50%)
    background-color #ffffff
    border-radius 20px
    box-shadow  0 11px 15px -7px rgba(0, 0, 0, 0.2),
                0 24px 38px 3px rgba(0, 0, 0, 0.14),
                0 9px 46px 8px rgba(0, 0, 0, 0.12)
    z-index 100

modal + div:before
    content ''
    position absolute
    height 100vh
    width 100vw
    top 0
    left 0
    background-color rgba(0, 0, 0, 0.5)
    z-index 99
