component-list
  margin-top 45px
  min-width 305px

  .title
    color #eeeeee
    font-family 'Sans'
    font-size 25px
    margin 10px 55px 0
    text-shadow 0 0 6px rgba(0, 0, 0, 0.6)

  .list


  &[type="Games"] .list
    overflow hidden
    padding 10px 0 30px

    .item
      background-color #ffffff
      box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.3),
                 0 1px 1px 0 rgba(0, 0, 0, 0.24),
                 0 2px 1px -1px rgba(0, 0, 0, 0.22)
      border-radius 3px
      cursor pointer
      font-family 'Sans'
      font-size 20px
      flex 0 0 215px
      height 120px
      transition: box-shadow 0.2s, transform 0.2s

      & + .item
        margin-left 8px

      &:hover
        box-shadow 0 6px 6px -3px rgba(0, 0, 0, 0.3),
                   0 10px 14px 1px rgba(0, 0, 0, 0.24),
                   0 4px 18px 3px rgba(0, 0, 0, 0.22)
        transform scale(1.1, 1.1)

    .spacer
      background-color rgba(0, 0, 0, 0)
      flex 0 0 55px
      height 120px
