.compose-tab
  color #ffffff

.compose-title
  height 56px
  padding 0 20px

  > *
    align-content center

  label
    text-transform uppercase

  i
    margin-left 15px

.compose-item
  background-color #204070
  color darken(#ffffff, 20%)

.property, .half-property
  border-bottom 1px #04264e solid
  height 36px

  span
    line-height 12px
    padding-left 20px

  input, select
    background-color rgba(255,255,255,0.9)
    border-bottom solid 2px #0f4682
    border-style none
    font-family "Open Sans"
    font-size 1rem
    height 100%
    line-height 20px
    padding 0 10px
    width 60%

  input[type="number"]
    text-align right
    width 30%

.half-property
  span, input
    width 25%

.property-switch
  height 36px

  span
    line-height 12px
    padding-left 20px
    margin-right 25px
    width 90px

  label
    background-color rgba(0, 0, 0, 0.3)
    border-radius 10px 0 0 10px
    cursor pointer
    font-size 0.9rem
    height 24px
    line-height 24px
    text-align center
    width 65px

  label:nth-of-type(2)
    border-radius 0 10px 10px 0
    width 85px

  input[type="radio"]
    display none

  input[type="radio"]:checked + label
    background-color #daa520
    color rgb(34, 34, 34)
    font-weight 600
