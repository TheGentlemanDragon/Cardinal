.compose-elements
  background-color #204070
  color darken(#ffffff, 20%)

.compose-element
  cursor pointer
  height 42px
  padding 0 0 0 20px

  i
    width 28px

  input
    background-color rgba(255, 255, 255, 0.8)
    border-bottom solid 2px rgb(15, 70, 130)
    border-radius 3px
    border-style none
    font-size 1rem
    font-family "Open Sans"
    line-height 20px
    margin 1px 10px 0 -6px
    padding 2px 6px
    // width 175px
    transition background-color 1s

  &.selected
    background-color #daa520
    color rgb(64, 64, 64)
    font-weight 600

